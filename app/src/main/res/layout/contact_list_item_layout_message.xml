<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/selector_contact_item_background"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    card_view:cardCornerRadius="4dp">


    <LinearLayout
        android:id="@+id/message_contact"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/peo_photo_message"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="38px"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:background="@drawable/male01"
            android:paddingRight="72px" />
        <TextView
            android:id="@+id/message_lists"
            android:layout_width="wrap_content"
            android:layout_height="114px"
            android:layout_gravity="center"
            android:paddingLeft="28px"
            android:paddingRight="72px"
            android:paddingTop="12px"
            android:paddingBottom="12px"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="38px"/>
        <TextView
            android:id="@+id/phone_message"
            android:layout_width="wrap_content"
            android:layout_height="114px"
            android:layout_gravity="center"
            android:paddingLeft="28px"
            android:paddingRight="72px"
            android:paddingTop="12px"
            android:paddingBottom="12px"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="38px"/>
